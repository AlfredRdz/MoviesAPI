<!--            android:id="@+id/textView1"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Sinopsis"-->
<!--            android:textSize="12sp"/>-->
    </LinearLayout>

</androidx.cardview.widget.CardView>